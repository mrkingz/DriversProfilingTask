{
  "name": "DriversProfilingTask",
  "version": "1.0.0",
  "main": "src/server",
  "repository": "git@github.com:mrkingz/DriversProfilingTask.git",
  "author": "Kingsley Frank-Demesi",
  "license": "MIT",
  "engines": {
    "node": "13.12.0"
  },
  "scripts": {
    "build": "yarn clean && babel src -d dist",
    "dev": "nodemon --watch src ./src/server --exec babel-node",
    "start": "babel-node ./dist/server",
    "clean": "rimraf dist",
    "lint": "eslint ./src/**/*.js",
    "lint:fix": "eslint ./**/*.js --fix"
  },
  "dependencies": {
    "@sentry/node": "^5.18.1",
    "config": "^3.3.1",
    "consola": "^2.14.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{}": [
      "eslint --fix",
      "git add"
    ]
  }
}
